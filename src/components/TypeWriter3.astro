<div class="split-appear">
  <h1 aria-hidden="true">
    <span class="split-left">АХАХАХАХАХАХАХАХАХАХАХАХАХА</span>
    <!-- <span class="separater"></span> -->
    <span class="split-right">АХАХАХАХАХАХАХАХАХАХАХАХАХА</span>
    <!-- accessible copy for screen readers -->
    <span class="visually-hidden">АХАХАХАХАХАХАХАХАХАХАХАХАХА</span>
  </h1>
</div>

<style>
  /* layout */
  .split-appear {
    width: 100vw;
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translateX(-50%);
    mix-blend-mode: exclusion;
    z-index: 1;
  }

  .separater {
    width: 56rem;
  }
  .split-appear h1 {
    display: flex;
    justify-content: space-between;
    max-width: 100%;
    position: relative;
    margin: 0;
    font-family: monospace;
    font-size: 2rem;
    color: #fff;
    white-space: nowrap;
    line-height: 1;
  }

  /* common for both revealing parts */
  .split-left,
  .split-right {
    width: 0;
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    pointer-events: none;
  }

  /* left part: reveals from left toward center */
  .split-left {
    margin-right: auto;
    text-align: left;
    animation: reveal-left 2.5s 1s steps(30, end) forwards;
  }

  /* right part: reveals from right toward center */
  .split-right {
    text-align: right;
    animation: reveal-right 2.5s 1s steps(30, end) forwards;
  }

  @keyframes reveal-left {
    from {
      width: 0;
    }
    to {
      width: 50%;
    }
  }

  @keyframes reveal-right {
    from {
      width: 0;
    }
    to {
      width: 50%;
    }
  }

  /* visually hide the accessible copy but keep it for screen readers */
  .visually-hidden {
    position: absolute !important;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0 0 0 0);
    white-space: nowrap;
    border: 0;
  }
</style>
