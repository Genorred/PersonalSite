<div class="absoluteAnimeList">
  <div class="movingBlock"></div>
  <div class="movingBlock"></div>
  <div class="movingBlock"></div>
  <div class="movingBlock"></div>
</div>

<style>
  @keyframes animeListAppear {
    0% {
      background-color: transparent;
    }
    100% {
      background-color: red;
    }
  }
  @keyframes blink {
    0% {
      visibility: visible;
    }
    50% {
      visibility: hidden;
    }
    100% {
      visibility: visible;
    }
  }
  .absoluteAnimeList {
    position: absolute;
    top: 50px;
    right: 100px;
    width: 150px;
    height: 150px;
    animation:
      animeListAppear 0.5s ease-in-out 2.5s forwards,
      blink 0.4s steps(1) 0s 4;
    filter: drop-shadow(0 0 4px red);
  }

  .movingBlock {
    /* filter: drop-shadow(0 0 4px blue); */
    position: absolute;
    background: rgba(255, 255, 255, 1);
    /* border: 1px solid hsl(239 79% 64%); */
    /* border: 1px solid hsl(239 79% 64%); */
    mix-blend-mode: hard-light;
    width: 70px;
    height: 70px;
  }

  @keyframes fadeIn {
    from {
    }
    to {
      opacity: 1;
      background-color: red;
    }
  }

  @keyframes blockAnimation {
    0%,
    14.27% {
      transform: translate(-10%, -10%);
    }
    28.56%,
    42.83% {
      transform: translate(10%, -20%);
    }

    57.12%,
    71.39% {
      transform: translate(-30%, 15%);
    }

    /* ➕ новое состояние 2 */
    85.68%,
    99.99% {
      transform: translate(-25%, 25%);
    }
  }

  @keyframes blockAnimationCross {
    0% {
      transform: translate(-10%, -10%);
    } /* Start */
    28.56% {
      transform: translate(20%, 20%);
    } /* C */
    57.12% {
      transform: translate(-10%, 30%);
    } /* G */
    85.68% {
      transform: translate(25%, -15%);
    } /* F */
    100% {
      transform: translate(-10%, -10%);
    } /* Back to start */
  }

  @keyframes blockAnimationChaos {
    0% {
      transform: translate(25%, -15%);
    } /* Start */
    28.56% {
      transform: translate(20%, 20%);
    } /* B */
    57.12% {
      transform: translate(-10%, -10%);
    } /* A */
    85.68% {
      transform: translate(10%, -30%);
    } /* C */
    100% {
      transform: translate(25%, -15%);
    } /* Back to start */
  }

  @keyframes blockAnimationClockwise {
    0% {
      nsform: translate(-10%, -10%);
    } /* Start */
    28.56% {
      transform: translate(-25%, 25%);
    } /* G */
    57.12% {
      transform: translate(-30%, 15%);
    } /* E */
    85.68% {
      transform: translate(25%, -20%);
    } /* F */
    100% {
      transform: translate(-10%, -10%);
    } /* Back to start */
  }
  .movingBlock:nth-child(1) {
    top: -10px;
    left: -10px;
    animation:
      blockAnimation 1.5s steps(1, end) forwards,
      fadeIn 0.5s ease-in-out 2.5s forwards,
      blockAnimation 1.5s forwards steps(1) 1.5s infinite;
    /* animation-timing-function: steps(5, end); */
  }

  .movingBlock:nth-child(2) {
    top: 5px;
    right: -10px;
    animation:
      blockAnimationChaos 1.5s steps(1) forwards,
      fadeIn 0.5s ease-in-out 2.5s forwards,
      blockAnimationChaos 1.5s forwards steps(1) 1.5s infinite;
  }

  .movingBlock:nth-child(3) {
    bottom: 10px;
    left: -10px;
    width: 80px;
    height: 80px;
    animation:
      blockAnimationCross steps(1) 1.5s forwards,
      fadeIn 0.5s ease-in-out 2.5s forwards,
      blockAnimationCross 1.5s forwards steps(1) 1.5s infinite;
  }

  .movingBlock:nth-child(4) {
    animation:
      blockAnimation 1.5s forwards steps(1),
      fadeIn 0.5s ease-in-out 2.5s forwards,
      blockAnimation 1.5s forwards steps(1) 1.5s infinite;
    bottom: -10px;
    right: -10px;
    width: 80px;
    height: 80px;
  }
</style>
